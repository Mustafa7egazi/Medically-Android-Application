<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_back_outlined"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/imPhoto"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/logo_min" />

        <TextView
            android:id="@+id/usrName"
            style="@android:style/TextAppearance.Holo.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imPhoto"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/title"
            android:text="Medically"
            android:gravity="center"
            android:textColor="#FF9800"
            android:textSize="50dp"
            android:textStyle="bold|italic" />


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usrName">

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/StartMessage"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_switch"
                    android:layout_marginTop="10dp"
                   android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:text="Message"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btn2"
                    style="@android:style/TextAppearance.Holo.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/StartMessage"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FF9800"
                    android:onClick="messageBtnClick"
                    android:text="  SHOW   "
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/contact"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="60dp"
                    android:text="Contact us"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btn3"
                    style="@android:style/TextAppearance.Holo.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/help"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/contact"
                    android:backgroundTint="#FF9800"
                    android:onClick="onclickAC"
                    android:text="Contact"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/help"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="60dp"
                    android:text="Help"
                    android:textStyle="bold"

                    />

                <Button

                    android:id="@+id/btn4"
                    style="@android:style/TextAppearance.Holo.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/help"
                    android:backgroundTint="#FF9800"
                    android:onClick="onclickHE"
                    android:text="   Help    "
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/logOutBtn"
            style="@android:style/TextAppearance.Holo.Large"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:backgroundTint="#FF5722"
            android:fontFamily="@font/title"
            android:onClick="logOutClick"
            android:shadowColor="#FF9800"
            android:shadowRadius="10"
            android:text="LOG OUT!"
            android:textColor="#FFFFFF"
            android:textStyle="italic" />

    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="#FFFFFF"
        android:id="@+id/menuBottomNav"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        app:itemIconTint="#8A8787"
        app:itemTextColor="#8A8787"
        app:menu="@menu/nav_menu_bar"/>

</LinearLayout>